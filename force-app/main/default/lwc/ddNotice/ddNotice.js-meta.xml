<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>DD Notice</masterLabel>
    <description>You can use this component to show a message on the lightning pages</description>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="showNotice" label="Show Notice" type="Boolean" default="true" />
            <property name="title" label="Title" type="String" />
            <property name="message" label="Message" type="String" />
            <property name="variant" label="Variant" type="String" datasource="Info,Warning,Error,Success" />
            <property name="showClose" label="Show Close Button" type="Boolean" default="true"/>
            <property name="autoHideInterval" label="Auto Hide Interval" type="Integer" description="Auto Hide Interval (in Milliseconds)"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>